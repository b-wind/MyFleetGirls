#!/bin/bash

JAVA_HOME=$HOME/etc/soft/jdk1.8.0
pid=server/target/universal/stage/RUNNING_PID
port1=9003
port2=9004

if [ `netstat -ant | grep ":$port1" | wc -l` -gt 0 ]
then
    port=$port2
else
    port=$port1
fi

# Directory
myfleet_dir=$HOME/service/MyFleetGirls/$port
cd $myfleet_dir

# Kill old process
kill `cat $pid`

git --git-dir=.git pull
nice -n 10 sbt zip
sleep 3
nice -n 10 /mnt/backup/service/dump/myfleet/dump.sh
nice -n 10 sbt compile
sbt start -Dhttp.port=$port &

sleep 120
echo "Kill old process"
if [ $port -eq $port1 ]
then
    kill `cat ../$port2/$pid`
else
    kill `cat ../$port1/$pid`
fi
